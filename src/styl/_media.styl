// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+max-screen(1200px)
	.promo-block__row
		flex-wrap wrap
		
		.title
			max-width 100%
			width 100%
			margin-bottom 30px
			margin-right 0
			span
				display inline
			
			

	.nav__col
		margin-left 25px
			

+max-screen(1100px)
	.header
		padding 30px 0
		margin-bottom 0
		&-tools
			display flex
			
	.nav,
	.search-wrapper
		position fixed
		top 0
		left 0
		z-index 30
		transition all .23s ease-in-out
		width 100%
		height 100vh
		overflow-y auto
		padding 25px 15px
		opacity 0
		visibility hidden
		pointer-events none
		&.is-opened
			opacity 1
			visibility visible
			pointer-events auto
			
	.search-wrapper
		width 100%
		max-width 100%
		outline none
		
	.nav
		&__col
			justify-content flex-end
		&__overlay
			display block
		&-content
			background-color $basic-white-color
			box-shadow 0px 15px 55px rgba(0, 0, 0, 0.1)
			padding 25px
			position relative
			z-index 2
			&__header
				display flex
				margin-bottom 30px
		li
			line-height 1
			display flex
			align-items center
			justify-content space-between
			flex-wrap wrap
			padding-bottom 20px
			margin-bottom 20px
			border-bottom 1px solid rgba($dark-text-color, .1)
			position relative
			
			&:last-child
				padding-bottom 0
				margin-bottom 0
				border-bottom none
			
			a
				font-size 16px
				padding-right 0
				&:after
					display none
					
	.btn-toggle
		display inline-block
		

	.sub-menu
		position relative
		width 100% !important
		flex none
		top auto
		left auto
		transition none
		opacity 1
		visibility visible
		pointer-events auto
		padding 0
		margin 0
		border none
		padding 0
		padding-top 20px
		padding-left 20px
		display none
		li
			display block
			text-align left
			margin-bottom 20px
			padding-bottom 0
			border none
			margin-right 0
			&:last-child
				margin-bottom 0
				


+max-screen(1050px)
	.main-article
		.title
			font-size 22px
			line-height 26px
			

	.articles-slider
		.swiper-wrapper
			flex-wrap wrap
			
		.swiper-slide
			width 50%
			padding-bottom 20px
			


	.main-category__wrapper
		margin-bottom 80px
		width 100%
		flex 1 0 50%
		&:last-child
			margin-bottom 0


+max-screen(992px)
	.subscribe
		&__row
			flex-wrap wrap
			
		&__text
			width 100%
			
			margin-bottom 35px
		&__form
			width 100%
			
+max-screen(767px)
	.main-category__wrapper
		flex 1 0 100%
	

+max-screen(700px)
	
	.container
		padding-left 15px
		padding-right 15px
		
	.gutter-bottom
		padding-bottom 80px
		
	.header
		.logo
			img
				max-width 115px
		
	.sect__promo
		padding-top 50px
		
	.promo-block
		.title
			font-size 25px
			line-height 30px
			margin-bottom 30px
			padding-bottom 30px
			border-bottom 1px solid rgba($dark-text-color, .1)
			
			i
				color $accent-color
				border-bottom 2px solid $accent-color
				font-style italic
			span
			
				display block
			
	.promo-block__row
		margin-bottom 80px
		

	.main-articles__row
		flex-wrap wrap
		
	.main-article
		padding-bottom 0
		&__wrapper
			width 100%
			padding-bottom 0
			margin-bottom 30px
			&:last-child
				margin-bottom 0
				

		.article-card__thumbnail
			padding-top 100%
			
		.title
			font-size 30px
			line-height 40px
		
			
	.main-articles
		margin-bottom 80px
		
	.articles-slider
		margin-right -20px
		.swiper-wrapper
			flex-wrap nowrap
			
		.swiper-slide
			width 325px
			padding-bottom 0
			
	.slider-notice
		display block
		
	.promo-block
		.share
			width 100%
			
			&-socials
				display flex
				
				li
					flex 1
					
				&__link
					width 100%
					

	.subscribe
		margin-left -15px
		margin-right -15px
		padding 45px 15px
		

	.main-category
		&__wrapper
			margin-bottom 45px
		&__title
			font-size 35px
			line-height 43px
			margin-bottom 25px

+max-screen(420px)
	.promo-block
		.title
			span
				text-align right	

+max-screen(374px)
	.promo-block .title
		white-space nowrap
	.articles-slider
		.swiper-slide
			width 300px
			
	.subscribe__form
		.form-group
			&:before
				transform none
				top 19px
			.btn
				position relative
				right auto
				transform none
				top auto
				width 100%
				margin-top 10px
				min-height 50px
				
	.form-input
		padding-right 20px