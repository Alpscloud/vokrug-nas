.nav
	&__overlay
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba($basic-black-color, .2)
		display none
	&-content
		&__header
			display none
			align-items center
			justify-content space-between
			span
				color $accent-color
				display inline-block
				font 25px $Reg
				border-bottom 1px solid
	&__col
		flex 1
		margin-left 70px
		display flex
		align-items center
		justify-content space-between
		

	li
		display inline-block
		margin-right 11px
		line-height 100px
		
		&:hover
			> a
				color $accent-color
				span
					&:before
						width 100%
					
					
			.sub-menu
				opacity 1
				visibility visible
				pointer-events auto
		
			
		&:last-child
			margin-right 0
			a
				&:after
					display none
	
	a
		font 13px $Med
		color $dark-text-color
		display inline-block
		position relative
		padding-right 15px
		&:after
			pseudo()
			position absolute
			vertical-center()
			right 0
			width 3px
			height 3px
			border-radius 50%
			background-color $dot-color
			opacity .2
		
		span
			display inline-block
			position relative
			padding-bottom 2px
			&:before
				pseudo()
				position absolute
				left 0
				width 0
				background-color $accent-color
				transition width .17s ease-in-out
				height 1px
				bottom 0
			
		
		&:hover
			color $accent-color
			span
				&:before
					width 100%
			

.sub-menu
	position absolute
	top 100%
	width 100%
	left 0
	z-index 5
	background-color $basic-white-color
	border-top 1px solid rgba($border-color, .5)
	border-bottom 1px solid rgba($border-color, .5)
	padding 20px 0
	transition all .17s ease-in-out
	text-align center
	opacity 0
	visibility hidden
	pointer-events none
	line-height 1
	li
		display inline-block
		margin-right 66px
		line-height 1
		&:last-child
			margin-right 0
		a
			&:after
				display none
			
