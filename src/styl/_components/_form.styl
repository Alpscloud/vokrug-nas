input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)




.form
	&-input
		display block
		width 100%
		text-align left
		background-color $basic-white-color
		font 13px $Reg
		color $dark-text-color
		padding 17px 170px 17px 50px
		border-radius 5px
		&:hover
			&::-webkit-input-placeholder
				color $dark-text-color
			&::-moz-placeholder
				color $dark-text-color
			&:-moz-placeholder
				color $dark-text-color
			&:-ms-input-placeholder
				color $dark-text-color
				
		&:focus
			~ .btn-submit 
				span
					&:after
						opacity 1
						transform translate(5px, -50%)
		
			
		&::-webkit-input-placeholder
			font 13px $Reg
			color rgba($dark-text-color, .5)
			transition color .17s ease-in-out
		&::-moz-placeholder
			font 13px $Reg
			color rgba($dark-text-color, .5)
			transition color .17s ease-in-out
		&:-moz-placeholder
			font 13px $Reg
			color rgba($dark-text-color, .5)
			transition color .17s ease-in-out
		&:-ms-input-placeholder
			font 13px $Reg
			color rgba($dark-text-color, .5)
			transition color .17s ease-in-out
			
		&.is-error
			border-color red
			
	&-group
		position relative
		margin-bottom 10px
		&:last-child
			margin-bottom 0
			
		.btn
			position absolute
			z-index 1
			right 7px
			vertical-center()
			
		&__email
			&:before
				pseudo()
				position absolute
				pointer-events none
				position absolute
				left 20px
				vertical-center()
				width 13px
				height 13px
				background url('../img/icons/svg/email.svg') 50% no-repeat / contain
			
		&__label
			display inline-block
			margin-bottom 5px
			
	&-textarea
		min-height 200px
	



.form
	&-checkbox
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 2px
			width 16px
			height 16px
			border 1px solid $text-color
			background-position 50% 50%
			background-repeat no-repeat
			background-size 12px 12px
			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:before
							background-color $text-color
							background-image url('../img/icons/svg/checkbox-ic.svg')
							
.form
	&-radio
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 50%
			width 16px
			height 16px
			border 1px solid $text-color
		&:after
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 2px
			top 2px
			width 12px
			height 12px
			border-radius 50%
			background-color $text-color
			display none
			

			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:after
							display block


