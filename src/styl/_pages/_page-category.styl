.category-entering
	margin-bottom 45px
	&__title
		display flex
		flex-wrap nowrap
		align-items center
		justify-content flex-start
		
.category-articles
	> .title
		margin-bottom 40px
		

.articles-cards__row
	.article-card__wrapper
		width 25%
		margin-bottom 50px
		&:nth-child(1),
		&:nth-child(2)
			width 50%
		
			.article-card__preview
				display none
				
			.title
				font-size 30px
				line-height 40px
				margin-bottom 20px
				
		&:nth-child(10n+3),
		&:nth-child(10n+4)
			width 50%
			margin 50px 0 100px
			.article-card
				padding-top 35px
				padding-bottom 35px
				border-top 1px solid rgba($dark-text-color, .1)
				border-bottom 1px solid rgba($dark-text-color, .1)
				display flex
				flex-wrap nowrap
				
				&__thumbnail
					padding-top 37px
					min-height 230px
					margin-bottom 0
					width 50%
				
				&__content
					flex 1
					width 100%
					padding-left 35px
					display flex
					flex-direction column
					
				.article-categories
					order 1
					margin-bottom 16px
					padding-bottom 0
					border-bottom none
					display inline-flex
					background-color $accent-color
					border-radius 5px
					padding 10px
					a
						color $basic-white-color
					li
						&:after
							opacity 1
							background-color $basic-white-color
					
				&__preview
					order 3
					margin-bottom 0
					
				.title
					order 2
		


.subcategory
	display flex
	flex-wrap nowrap
	align-items flex-start
	font-size 14px
	color $text-color
	max-width 240px
	&__info
		&--text
			display block
		&--title
			display inline-block
			font 20px $SemiBold
			padding-bottom 2px
			position relative
			transition color .17s ease-in-out
			&:before
				pseudo()
				position absolute
				left 0
				bottom 0
				height 2px
				background-color $accent-color
				transition width .17s ease-in-out
				width 0
			
	&__ic
		flex none
		width 67px
		height 67px
		display block
		margin-right 20px
	svg
		svg()
		stroke-linecap round
		stroke-linejoin round
		fill-rule evenodd
		clip-rule evenodd
		fill none !important
		stroke $dark-text-color !important
		stroke-width 2px !important
		
	&:hover,
	&.is-active
		.subcategory__info--title
			color $accent-color
			&:before
				width 100%
		svg
			stroke $accent-color !important