.share
	color $dark-text-color
	&__title
		
		font-size 20px
		line-height 27px
		margin-bottom 5px
	&__text
		opacity .5
		font-size 14px
		line-height 21px
		margin-bottom 15px
		
	&-socials
		font-size 0
		height 40px
		li
			display inline-block
			margin-right 12px
			&:last-child
				margin-right 0
				
		&__link
			position relative
			width 40px
			height 40px
			border-radius 5px
			display block
			border 1px solid $search-border-color
			
			svg
				svg()
				width 15px
				height 15px
				position absolute
				position-center()
				fill-rule evenodd
				clip-rule evenodd
				
			path
				transition fill .17s ease-in-out
				
			&--vk
				svg
					fill $vk-color
				&:hover
					background-color $vk-color
			&--fb
				svg 
					fill $fb-color
				&:hover
					background-color $fb-color
			&--google
				&:hover
					background-color $google-color
			&--tw
				svg
					fill $tw-color
				&:hover
					background-color $tw-color
				
			&:hover
				svg, path
					fill $basic-white-color !important
					