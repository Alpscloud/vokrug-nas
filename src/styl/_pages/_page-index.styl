.sect__promo
	padding-top 55px
	
	.title
		max-width 770px
		margin-right 30px
		span
			display block
		
.promo-block__row
	margin-bottom 100px
	

.article-card__thumbnail
	margin-bottom 20px

.main-articles
	margin-bottom 60px
	
.main-article
	padding-bottom 40px
	.article-card__thumbnail
		padding-top 75%
		
	.title
		margin-bottom 20px
		margin-right 0
		

.article-categories
	padding-bottom 20px
	display inline-block
	border-bottom 1px solid rgba($border-color, .5)
	margin-bottom 20px 
	&:last-child
		margin-bottom 0
	ul
		li
			display inline-block
			margin-right 11px
			padding-right 15px
			position relative
			&:after
				pseudo()
				position absolute
				vertical-center()
				right 0
				width 3px
				height 3px
				border-radius 50%
				background-color $dot-color
				opacity .2
			&:last-child
				margin-right 0
				padding-right 0
				&:after
					display none
					
		a
			text-transform uppercase
			letter-spacing 0.05em
			color $light-text-color
			font 12px $SemiBold
			&:hover
				color $accent-color
				
				

.article-card
	&__preview
		margin-bottom 20px
		font-size 14px
		line-height 21px
		&:last-child
			margin-bottom 0
		
	.title
		margin-bottom 12px
		margin-right 0
		


.subscribe
	background-color $accent-color
	border-radius 5px
	padding 35px
	&__row
		margin 0 auto
		max-width 920px
		
	&__text
		font-size 14px
		
	&__title
		position relative
		font 35px $SemiBold
		line-height 42px
		margin-bottom 5px
		padding-left 48px
		background url('../img/icons/svg/subscribe.svg') left center no-repeat / 36px
		

.main-categories__row
	margin-left -27.5px
	margin-right -27.5px
	
.main-category
	&__wrapper
		padding-left 27.5px
		padding-right 27.5px
	&__article
		border-bottom 1px solid rgba($border-color, .5)
		padding-bottom 20px
		margin-bottom 20px
		&:last-child
			margin-bottom 0 
	&__title
		margin-bottom 35px
		
	.article-categories
		padding-bottom 0
		border-bottom none
		margin-bottom 12px
		

.category-text
	max-width 320px
	width 100%
	flex none
	padding-right 30px
	.title
		margin-bottom 15px
	&__description
		margin-bottom 35px
		

.category-articles
	flex 1
	width calc(100% - 320px)
	&__full
		width 100%
		flex none
	
